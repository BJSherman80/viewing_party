
<h1> <%=@movie.title%> </h1>

<%= button_to "Create Viewing Party for Movie", '/parties/new', method: :get, params: { movie_title: @movie.title, movie_runtime: @movie.runtime, movie_api_id: @movie.api_id } %>
<p>Vote Average: <%=@movie.vote_average%> </p>
<p>Runtime: <%=hour_min(@movie.runtime)%> </p>
 <p>Genre(s): <%@movie.genres.each do |genre| %>
  <%=genre[:name]%>
 <% end %> </p>
<p>Summary: <%=@movie.summary%> </p>
<h2><%= @reviews.count %> Review(s)</h2>
<% @reviews.each do |review| %>
  <h3>Author: <%= review.author %></h3>
  <p><%= review.content %></p>
<% end %>
<h2>Cast</h2>
<% to_ten(@cast).each do |cast| %>
  <p><%= cast.name %> as <%= cast.character %></p>
<% end %>
