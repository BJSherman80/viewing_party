<center>
  <h1>Welcome, <%= current_user.name %>! </h1>

  <%= button_to 'Find Top Rated Movies', '/movies', method: :get %>
  <%= form_with url: '/movies', method: :get do |f|%>
    <%= f.text_field :search, placeholder: 'Search by movie title' %>
    <%= f.submit 'Find Movies', data: { disable_with: "Please enter keyword" } %>
  <% end %>
</center>
