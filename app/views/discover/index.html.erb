<center>
  <div class="pad-50-bottom">
    <h1><%= current_user.name %>'s Discover Page </h1>
  </div>
  <div class="pad-12-bottom">
    <%= button_to 'Find Top Rated Movies', movies_path, method: :get, :class => "btn btn-info" %>
  </div>
  <div class="pad-12-bottom">
    <h3>OR</h3>
  </div>
  <div class="container">
    <%= form_with url: movies_path, method: :get, local: true do |f|%>
    <%= f.search_field :search, placeholder: 'Search by movie title' %>
    <%= f.submit 'Find Movies', class: "btn btn-info", data: { disable_with: "Please enter keyword" } %>
    <span class="glyphicon glyphicon-search"></span>
    <% end %>
  </div>
</center>
