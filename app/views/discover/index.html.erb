<center>
  <h1><%= current_user.name %>'s Discover Page </h1>

  <%= button_to 'Find Top Rated Movies', '/movies', method: :get %>
  <%= button_to 'Movies Playing Now', '/movies', method: :get, params: { :search => 'now_playing' } %>

  <%= form_with url: '/movies', method: :get, local: true do |f|%>
    <%= f.search_field :search, placeholder: 'Search by movie title' %>
    <%= f.submit 'Find Movies', data: { disable_with: "Please enter keyword" } %>
  <% end %>
</center>
