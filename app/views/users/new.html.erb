<center>
  <div class="pad-50-bottom">
    <h1>New User Registration</h1>
  </div>

  <section class='register-card card pad-25-top pad-50-bottom'>
    <div class="card-body">
      <%= form_with method: :post, url: '/registration', local: true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Enter Name' %>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: 'Enter Email' %>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Enter Password' %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: 'Re-Enter Password', required: true %>
        <%= f.submit "Register", class: 'btn btn-info' %>
      <% end %>
    </div>
  </section>
</center>
