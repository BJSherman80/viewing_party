<center>
  <div class="pad-50-bottom">
    <h1>Welcome to Viewing Party!</h1>
    <h3>Viewing Party is an app</h3>
  </div>

  <section class="login-card card pad-25-top pad-50-bottom">
    <div class="card-body">
      <%= form_with url: "/login", method: :post, local: true do %>
        <h4><%= label_tag(:email) %></h4>
        <%= text_field_tag(:email)  %>
        <h4><%= label_tag(:password) %></h4>
        <%= text_field_tag(:password) %>
        <%= submit_tag("Log In", class:"btn btn-info") %>
      <% end %>
    </div>
    <%= button_to 'Register New User', '/registration', method: :get, :class => "btn btn-info"%>
  </section>
</center>
